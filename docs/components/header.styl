.buscador
	width: 100%
	height: 200px
	display: flex
	justify-content: center
	align-items: center
	background: color-3
	background: linear-gradient(0deg, rgba(55,0,106,1) 0%, rgba(60,1,110,1) 0%, rgba(143,15,177,1) 38%, rgba(158,17,189,1) 45%, rgba(215,27,235,1) 100%)
	form{
		display: flex
		justify-content: center
		width: 100%
	}
	&__input
		margin: 0 2rem 0 2rem
		width:600px
		min-width 250px
		height: 60px
		padding: 20px
		border-radius: 30px
		border: solid 3px
		font-size: 25px
		font-weight: 600
		color: color-3
		box-shadow: rgba(99, 99, 99, 0.2) 0px 2px 8px 0px
.encabezado--con-filtros
	contenedor()
	margin: 0 auto
	h2
		font-family: font-2
		text-transform: uppercase
		font-weight: 500
		font-size: 30px
		display: flex
		padding:  0 2rem 0 2rem
	.filtros
		width: 250px
		padding: 15px
		display: flex
		justify-content: space-around
		margin-right: 2rem
		boxShadow()
		span
			text-transform: uppercase
			font-family: font-2
			
		a
			font-size: 20px
			color: color-3