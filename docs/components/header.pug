mixin caja(imagen,titulo,contenido)
	.caja 
		.caja__imagen
			img(src="./images/" + imagen)
		.caja__contenido 
			h3= titulo 
			p= contenido
			section.botones 
				a.boton-2 Ver mas
				a.boton-2 compartir 
-var titulos = ["Titulo Principal", "Subtitulo 1", "Subtitulo 2", "Subtitulo 3", "Subtitulo 4"]
-var user = ["Hola"]
		block mixines
		
doctype html
html(lang="en")
	include ./head.pug
	body
		header 
			h1 Platzi Games 
			if user
				a.boton(href="#")=user[0]
			else
				a.boton(href="#") registro
		block componentes
