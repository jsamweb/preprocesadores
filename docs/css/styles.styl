* 
	box-sizing: border-box
	margin: 0
	padding: 0

body
	
	font-family: 'Lato', sans-serif

.buscador
	width: 100%
	height: 250px
	padding: 100px
	background: rgb(55,0,106);
	background: linear-gradient(0deg, rgba(55,0,106,1) 0%, rgba(60,1,110,1) 0%, rgba(143,15,177,1) 38%, rgba(158,17,189,1) 45%, rgba(215,27,235,1) 100%);
	background-size: cover
	text-align: center
	&__input
		width: 60%
		height: 60px
		padding: 20px
		border: none 
		border-radius: 30px
		font-size: 25px
		font-weight: 600
		border: solid 3px
		color: #fff
		
